<%- include('partials/navbar', { page: '/sites' }) %>

<section class="py-10 px-6 bg-gray-50 min-h-screen">
  <div class="max-w-5xl mx-auto">
    <h1 class="text-3xl font-bold mb-8 text-center">All National Historic Sites</h1>

    <% if (sites.length === 0) { %>
      <p class="text-center text-gray-500">No sites found.</p>
    <% } else { %>
      <div class="grid md:grid-cols-2 gap-6">
        <% sites.forEach(site => { %>
          <div class="bg-white rounded-lg shadow p-6">
            <img src="<%= site.image %>" alt="<%= site.site %>" class="w-full h-48 object-cover mb-4 rounded" onerror="this.style.display='none'">
            
            <h2 class="text-xl font-bold mb-1"><%= site.site %> (<%= site.siteId %>)</h2>
            <p class="text-gray-700 mb-1"><strong>Province:</strong> <%= site.ProvinceOrTerritory?.name || 'N/A' %></p>
            <p class="text-gray-700 mb-1"><strong>Location:</strong> <%= site.location %></p>
            <p class="text-gray-700 mb-1"><strong>Designated:</strong> <%= site.designated %> â€” <%= site.dateType %>: <%= site.date %></p>
            <p class="text-sm text-gray-600 mb-4"><%= site.description %></p>

            <div class="flex gap-3">
              <a href="/editSite/<%= site.siteId %>" class="btn btn-outline btn-sm">Edit</a>
              <a href="/deleteSite/<%= site.siteId %>" class="btn btn-error btn-sm">Delete</a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</section>
